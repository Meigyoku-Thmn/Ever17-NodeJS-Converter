{
    "compilerOptions": {
        "module": "CommonJS",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "outDir": "build",
        "inlineSourceMap": true,
        "target": "ES2017",
        "moduleResolution": "Node",
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules/*",
        "build/*"
    ]
}