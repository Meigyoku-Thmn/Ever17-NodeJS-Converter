{
   "compilerOptions": {
      "module": "CommonJS",
      "noImplicitAny": false,
      "removeComments": false,
      "preserveConstEnums": true,
      "inlineSourceMap": true,
      "target": "ES2017",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "incremental": true,
      "newLine": "lf",
      "outDir": ".build",
   },
   "exclude": [
      "node_modules/*",
   ]
}